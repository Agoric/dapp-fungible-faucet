{
  "name": "dapp-fungible-faucet-ui",
  "version": "0.0.1",
  "description": "dapp Frontend",
  "author": "Agoric",
  "license": "Apache-2.0",
  "homepage": ".",
  "type": "module",
  "scripts": {
    "build": "parcel build public/index.html",
    "lint-check": "eslint '**/*.{js,jsx}'",
    "lint-fix": "eslint --fix '**/*.{js,jsx}'",
    "start": "parcel serve --host=127.0.0.1 --port=3000 public/index.html",
    "test": "exit 0"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.umd.js",
      "**/generated/*"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "es2020": true,
      "browser": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    }
  },
  "eslintIgnore": [
    "dist/"
  ],
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "public/lib",
        "staticOutDir": "lib"
      }
    ],
    "excludeGlob": "**/*.js",
    "watcherGlob": "**/*.html"
  },
  "dependencies": {
    "@agoric/notifier": "community-dev",
    "@agoric/wallet-connection": "community-dev",
    "@endo/captp": "^2.0.3",
    "@endo/marshal": "^0.6.9",
    "lit": "^2.0.2",
    "regenerator-runtime": "0.13.7",
    "ses": "^0.15.11"
  },
  "devDependencies": {
    "caniuse-lite": "1.0.30001251",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "parcel": "^2.0.0",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
